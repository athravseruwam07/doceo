# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_QUALITY_MODEL=gemini-2.5-pro
GEMINI_QUALITY_FALLBACK_ENABLED=true
GEMINI_TTS_MODEL=gemini-2.5-flash-preview-tts
GEMINI_TTS_VOICE=Kore
GEMINI_TTS_STYLE=Speak naturally, warm and clear, like a helpful teacher.
GEMINI_TTS_SAMPLE_RATE_HZ=24000
VOICE_PROVIDER=gemini

# Application
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
DATABASE_URL=postgresql+asyncpg://doceo:doceo@localhost:5432/doceo
NEXTAUTH_SECRET=replace-with-your-nextauth-secret

# Optional: Rate limiting
MAX_REQUESTS_PER_MINUTE=10
CACHE_AUDIO_HOURS=24

# Gemini request behavior
GEMINI_REQUEST_TIMEOUT_SECONDS=120
GEMINI_MAX_RETRIES=1
GEMINI_RETRY_BACKOFF_SECONDS=1.5
